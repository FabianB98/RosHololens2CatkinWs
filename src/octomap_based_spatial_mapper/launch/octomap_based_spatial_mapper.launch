<launch>
    <include file="$(find hololens_depth_data_receiver)/launch/depth_data_receiver.launch"/>

    <rosparam file="$(find octomap_based_spatial_mapper)/config/lower_computational_load.yaml"/>
    <node name="octomap_based_spatial_mapper" pkg="octomap_based_spatial_mapper" type="octomap_based_spatial_mapper" respawn="true"/>

    <rosparam command="load" file="$(find octomap_based_spatial_mapper)/config/object_tracking_config.yaml"/>
    <!--
    <node pkg="bayes_people_tracker" type="bayes_people_tracker" name="clustersTrackerAll" respawn="true">
        <param name="base_link" type="string" value="map"/>
        <param name="target_frame" type="string" value="map"/>
    </node>
    -->
    <node pkg="bayes_people_tracker" type="bayes_people_tracker" name="clustersTrackerHuman" respawn="true">
        <param name="base_link" type="string" value="map"/>
        <param name="target_frame" type="string" value="map"/>
    </node>
    <node pkg="bayes_people_tracker" type="bayes_people_tracker" name="clustersTrackerUnknown" respawn="true">
        <param name="base_link" type="string" value="map"/>
        <param name="target_frame" type="string" value="map"/>
    </node>

    <node pkg="object3d_detector" type="object3d_detector_srv" name="humanClassifier" respawn="true">
        <param name="model_file_name" type="string" value="$(find object3d_detector)/libsvm/pedestrian_hololens.model"/>
        <param name="range_file_name" type="string" value="$(find object3d_detector)/libsvm/pedestrian_hololens.range"/>

        <param name="human_probability" type="double" value="0.7"/>
    </node>
</launch>